{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": ["dist/**"],
    "rules": {
      "indent": ["error", 4]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
